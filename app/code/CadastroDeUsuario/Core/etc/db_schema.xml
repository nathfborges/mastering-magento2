<?xml version="1.0"?>
<schema xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework:Setup/Declaration/Schema/etc/schema.xsd">
    	<table name="cadastros" resource="default" comment="Tabela de cadastros de usuários">
    		<column xsi:type="int" name="entity_id" padding="10" identity="true" unsigned="true" nullable="false" comment="Entity Id"/>
    		<column xsi:type="varchar" name="nome" nullable="false" length="255" comment="Nomes dos clientes"/>
    		<column xsi:type="varchar" name="nome_de_usuario" nullable="false" length="255" comment="Nome de usuários dos clientes"/>
    		<column xsi:type="varchar" name="e-mail" nullable="false" length="255" comment="E-mail dos clientes"/>
    		<column xsi:type="int" name="idade" comment="idade"/>
    		<constraint xsi:type="primary" referenceId="PRIMARY">
    			<column name="entity_id"/>
    		</constraint>
    	</table>
</schema>
